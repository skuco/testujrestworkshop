{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id" , "spell" , "effect" , "type" , "isUnforgivable"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 20
    },
    "spell": {
      "type": "string",
      "maxLength": 50
    },
    "type": {
      "enum": ["Spell" , "Curse" , "Hex" , "Enchantment" , "Jinx"]
    },
    "isUnforgivable": {
      "type": "boolean"
    }

  }
}